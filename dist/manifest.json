{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "1.0.4.0",
    "manifest_version": 3,
    "default_locale": "ja",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/main.js"
            ],
            "css": [
                "/style.css",
                "/all.min.css"
            ]
        }
    ],
    "permissions": [
        "storage",
        "unlimitedStorage",
        "offscreen"
    ],
    "host_permissions": [
        "https://www.diqt.net/",
        "https://diqt.s3.amazonaws.com/",
        "https://cdn.diqt.net/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "/icon48.png",
        "default_title": "DiQt"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "/fonts/*",
                "/options.html",
                "/offscreen.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}